

<div class='col-md-6 col-md-offset-3' >
<center>
<h1>Sign up</h1>

<%= form_for @user do |f| %>
 	<% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "alert " +  bootstrap_class_for(name) %>
    <% end %>
  <%= f.email_field :email, placeholder: "Email", autofocus: true, class: "form-control" %> <br>
  <%= f.password_field :password, placeholder: "Password", class: "form-control" %> <br>
  <%= f.submit "Sign Up", class: "btn btn-primary"%>
<% end %>
</center>
</div>
